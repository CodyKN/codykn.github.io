{
    "extends": "astro/tsconfigs/strict",
    "include": [".astro/types.d.ts", "**/*"],
    "exclude": ["dist"],
    "compilerOptions": {
        "jsx": "preserve",
        "jsxImportSource": "solid-js",
        "baseUrl": ".",
        "paths": {
            "@assets/*": ["src/assets/*"],
            "@config/*": ["src/config/*"],
            "@components/*": ["src/components/*"],
            "@layouts/*": ["src/layouts/*"]
        }
    }
}
